page{
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  font-size: 10px;
}
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.player_info{
  background: salmon;
  height: 80rpx;
  width: 100%;
  position: absolute;
  top: 0;
}
.user_info{
  position: absolute;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background: salmon;
  clear: both;
}
.chess_info{
  position: absolute;
  height: auto;
  width:100%;
  top: 80rpx;
  bottom:80rpx;
  overflow: hidden;
  /* background: seagreen; */
  padding: 80rpx 40rpx;
  box-sizing: border-box;

}
.canvas_container{
  /* background: salmon; */
  height: 100%;
}

.player-header,.user-header{
  display: flex;
}
.player-header image,.user-header image{
  width: 37px;
  height: 37px;
  border-radius: 50%;
}
.player-header image{
  margin-top: 10px;
  margin-left: 10px;
}
.rank_container{
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}
.rank_level{
  color: red;
  font-size: 17px;
}
.rank_score{
  color: #000;
  font-size: 13px;
}
.ci_btn{
  position: absolute;
  font-size: 17px;
  display: block;
  height: 25px;
  width: 25px;
  border-radius: 50%;
  background-color: red;
  text-align: center;
  top: 20px;
  right: 90px;
}
.game_set{
  position: absolute;
  top: 20px;
  right: 50px;
}
.talk_set{
  position: absolute;
  right: 10px;
  top: 20px;
}
.time_container{
  margin-left: 10px;
  margin-top: 20px;
  font-size: 12px;
}
.cur_time{
  margin-left: 6px;
}